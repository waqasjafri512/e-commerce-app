<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <ul class="cart__item-list">
                    <% products.forEach(p=> { %>
                        <li class="cart__item">
                            <h1>
                                <%= p.productId.title %>
                            </h1>
                            <h2>Quantity: <%= p.quantity %>
                            </h2>
                        </li>
                        <% }) %>
                </ul>
                <div class="centered">
                    <h2>Total: <%= currency || 'USD' %> <%= totalSum %>
                    </h2>
                </div>
                <div class="centered">
                    <form action="/checkout/coupon" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="text" name="code" placeholder="Promo code">
                        <button class="btn" type="submit">Apply</button>
                    </form>
                    <% if (appliedCoupon) { %><p>Applied: <%= appliedCoupon.code %> (<%= appliedCoupon.discountPercent %>% off)</p><% } %>
                </div>
                <div id="checkout">
                    <!-- Stripe Embedded Checkout will mount here -->
                </div>

                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    // Initialize Stripe with publishable key from server
                    var stripe = Stripe('<%= publishableKey %>');

                    async function initialize() {
                        const fetchClientSecret = async () => {
                            return '<%= clientSecret %>';
                        };

                        const checkout = await stripe.initEmbeddedCheckout({
                            fetchClientSecret,
                        });

                        // Mount Checkout
                        checkout.mount('#checkout');
                    }

                    initialize();
                </script>

            </main>
            <%- include('../includes/end.ejs') %>