<body>
<%- include('../includes/navigation.ejs') %>
<main>
  <h1>Coupons</h1>
  <form action="/admin/coupons" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input name="code" placeholder="CODE" required>
    <input name="discountPercent" type="number" min="1" max="90" placeholder="Discount %" required>
    <input name="maxUses" type="number" min="1" placeholder="Max Uses" required>
    <input name="expiresAt" type="date" required>
    <button class="btn" type="submit">Create Coupon</button>
  </form>
  <% coupons.forEach(c => { %><p><%= c.code %> - <%= c.discountPercent %>% - used <%= c.usedCount %>/<%= c.maxUses %></p><% }) %>
</main>
<%- include('../includes/end.ejs') %>
