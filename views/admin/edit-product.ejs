<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
  <% if (errorMessage) { %><div class="user-message user-message--error"><%= errorMessage %></div><% } %>
  <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" enctype="multipart/form-data">
    <div class="form-control"><label>Title</label><input class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>" type="text" name="title" value="<%= (editing || hasError) ? product.title : '' %>"></div>
    <div class="form-control"><label>Image</label><input type="file" name="image"></div>
    <div class="form-control"><label>Price</label><input class="<%= validationErrors.find(e => e.param === 'price') ? 'invalid' : '' %>" type="number" step="0.01" name="price" value="<%= (editing || hasError) ? product.price : '' %>"></div>
    <div class="form-control"><label>Description</label><textarea class="<%= validationErrors.find(e => e.param === 'description') ? 'invalid' : '' %>" name="description" rows="5"><%= (editing || hasError) ? product.description : '' %></textarea></div>
    <div class="form-control"><label>Category</label><input type="text" name="category" value="<%= (editing || hasError) ? (product.category || '') : '' %>"></div>
    <div class="form-control"><label>Brand</label><input type="text" name="brand" value="<%= (editing || hasError) ? (product.brand || '') : '' %>"></div>
    <div class="form-control"><label>Size</label><input type="text" name="size" value="<%= (editing || hasError) ? (product.size || '') : '' %>"></div>
    <div class="form-control"><label>Color</label><input type="text" name="color" value="<%= (editing || hasError) ? (product.color || '') : '' %>"></div>
    <div class="form-control"><label>Stock</label><input type="number" min="0" name="stock" value="<%= (editing || hasError) ? (product.stock || 0) : 0 %>"></div>
    <% if (editing) { %><input type="hidden" value="<%= product._id %>" name="productId"><% } %>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
  </form>
</main>
<%- include('../includes/end.ejs') %>
